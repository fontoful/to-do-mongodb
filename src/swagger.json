{
  "swagger": "2.0",
  "basePath": "api/v1",
  "host": "https://intense-taiga-62398.herokuapp.com",
  "info": {
    "version": "1.0.0",
    "title": "To Do API",
    "description": "To do API created to save list of things you have to do and know their current status.",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "definitions": {
    "User": {
      "type": "object",
      "properties": {
        "_id": {
          "type": "string",
          "description": "Unique id generated by MongoDB"
        },
        "name": {
          "type": "string",
          "description": "Name of the user"
        },
        "email": {
          "type": "string",
          "description": "Email address to register account"
        },
        "password": {
          "type": "string",
          "description": "Hashed value of password for authentication"
        }
      }
    },
    "Note": {
      "type": "object",
      "properties": {
        "_id": {
          "type": "string",
          "description": "Unique id generated by MongoDB"
        },
        "title": {
          "type": "string",
          "description": "Title of the note"
        },
        "body": {
          "type": "string",
          "description": "Body of the note"
        },
        "status": {
          "type": "string",
          "description": "Status of the note"
        }
      }
    }
  }
}